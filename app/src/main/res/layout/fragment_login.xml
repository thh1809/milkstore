<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/milk_bg">

    <!-- Khung login bo góc, bóng đổ -->
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_login_card"
        android:padding="24dp"
        android:elevation="8dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập hệ thống"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#A67C52"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif-medium"/>

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Tên đăng nhập"
            android:background="@drawable/bg_edit_text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#5D4037"
            android:textColorHint="#BCAAA4"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Mật khẩu"
            android:background="@drawable/bg_edit_text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#5D4037"
            android:textColorHint="#BCAAA4"
            android:inputType="textPassword"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Đăng nhập"
            android:textColor="#FFFFFF"
            android:backgroundTint="#A67C52"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"/>

        <TextView
            android:id="@+id/register_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa có tài khoản? Đăng ký ngay"
            android:textColor="#1976D2"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</LinearLayout>